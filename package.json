{
	"name": "@kyo-services/schedulewise",
	"version": "2.2.0",
	"type": "module",
	"engines": {
		"node": ">=18.0.0"
	},
	"description": "A smart and efficient task scheduler for managing periodic jobs with precision timing and intelligent scheduling in both browser and Node.js environments",
	"main": "./dist/main.js",
	"module": "./dist/main.js",
	"types": "./dist/main.d.ts",
	"exports": {
		".": {
			"import": "./dist/main.js",
			"require": "./dist/main.js",
			"types": "./dist/main.d.ts"
		},
		"./TaskScheduler": {
			"import": "./dist/TaskScheduler.js",
			"require": "./dist/TaskScheduler.js",
			"types": "./dist/TaskScheduler.d.ts"
		},
		"./Task": {
			"import": "./dist/Task.js",
			"require": "./dist/Task.js",
			"types": "./dist/Task.d.ts"
		},
		"./types": {
			"import": "./dist/types.js",
			"require": "./dist/types.js",
			"types": "./dist/types.d.ts"
		}
	},
	"scripts": {
		"build": "tsc --project tsconfig.json",
		"test": "jest --config jest.config.cjs",
		"test:watch": "jest --config jest.config.cjs --watch",
		"prepare": "husky install && npm run build",
		"lint": "eslint . --ext .ts",
		"lint:fix": "eslint . --ext .ts --fix",
		"prepublishOnly": "npm run build && npm test"
	},
	"keywords": [
		"task",
		"scheduler",
		"job",
		"periodic",
		"interval",
		"timer",
		"cron",
		"typescript"
	],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@types/jest": "^29.5.14",
		"@typescript-eslint/eslint-plugin": "^8.38.0",
		"@typescript-eslint/parser": "^8.38.0",
		"eslint": "^9.32.0",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"lint-staged": "^16.1.2",
		"ts-jest": "^29.4.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.38.0"
	},
	"files": [
		"dist/*.js",
		"dist/*.d.ts",
		"dist/*.map",
		"src"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kyo-services/schedulewise.git"
	},
	"bugs": {
		"url": "https://github.com/kyo-services/schedulewise/issues"
	},
	"homepage": "https://kyo.services/schedulewise",
	"lint-staged": {
		"*.ts": [
			"eslint --fix",
			"jest --findRelatedTests"
		]
	}
}
