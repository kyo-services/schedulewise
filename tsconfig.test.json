{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.test.ts",
    "src/__tests__/**/*.ts",
    "*.config.js",
    "*.config.cjs"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}